<div class="container">

  <h1><%= @list.name %></h1>

  <% if @list.photo.attached? %>
    <%= cl_image_tag(@list.photo.key,
    width: 400, height: 300, crop: :fill) %>
  <% else %>
    <%= image_tag('list_icon.jpg',
    width: 150, height: 150, crop: :thumb) %>
  <% end %>

    <!-- for face detection -->


  <div class="container">
    <div class="container">
      <%= link_to 'Add Movie', new_list_bookmark_path(@list) %>
    </div>

    <div class="container">
      <ul>
        <% @list.movies.each do |m| %>
          <li><%= m.title %> <%= link_to 'DELETE', delete_bookmark_path, method: :delete %></li>
        <% end %>
      </ul>
    </div>

    <div class="container">
      <%= link_to 'Back', lists_path %>
    </div>

  </div>

</div>
